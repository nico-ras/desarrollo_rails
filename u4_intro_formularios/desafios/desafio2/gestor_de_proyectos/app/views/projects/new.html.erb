<div class="mx-auto" style="width: 500px;">
<h1>Crea tu nuevo proyecto</h1>


<form method="get" action="/projects/create">

    <div class="form-group">
  
      <label for="name">Nombre del proyecto:</label> 
      <input name="name" class="form-control">
      
    </div>

    <div class="form-group">

      <label for="descript">Descripcion: </label>
      <textarea name="descript" class="form-control"></textarea>

    </div>


    <div class="form-group">

      <label for="state">Estado del proyecto:</label>

<select name="state" onchange="displayDivDemo('hideValuesOnSelect', this)">
  <option value="proposal">Propuesta</option>
  <option value="in_progress" selected="selected">En progreso</option>
  <option value="finished">Terminado</option>
</select>


    </div>

    <div id="hideValuesOnSelect">
    
    Fecha de inicio: <input  name="started_on" type="date" /><br/>
     Fecha de termino: <input  name="finished_on" type="date" />
    
    </div>


    
    <button type="submit"  class="btn btn-primary">Submit</button>
  </form>

  </div>